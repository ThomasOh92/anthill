<%= form_with scope: :instruction, url: project_instructions_path, local: true do |form| %>

  <div class="field margin-bottom-small" style="font-size:15px">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, cols: 80 %>
  </div>
  <br>

  <div class="field margin-bottom-small">
    <%= form.label "Attachment (if any):"%>
    <%= form.file_field :document, direct_upload: true %>
  </div>

  <div class="field">
    <%= form.hidden_field :project_id, :value => @project.id  %>
  </div>
  <br>

  <div class="actions" style="text-align: right">
    <%= form.submit "Add Instruction", class:"paper-btn margin", style:"background-color: #d0dcc2" %>
  </div>

<% end %>
