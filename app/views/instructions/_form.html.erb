<%= form_with scope: :instruction, url: project_instructions_path, local: true do |form| %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :document %>
    <%= form.file_field :document, direct_upload: true %>
  </div>

  <div class="field">
    <%= form.hidden_field :project_id, :value => @project.id  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
