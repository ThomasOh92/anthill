<p id="notice"><%= notice %></p>

<p>
  <strong>Project:</strong>
  <%= @instruction.project.subject%>
</p>

<p>
  <strong>Description:</strong>
  <%= @instruction.description %>
</p>



<p>
  <strong>Project:</strong>
  <% (0..@instruction.images.count-1).each do |image| %>
  <%= image_tag(@instruction.images[image], width: 300, height: 200)%>
  <% end %>
</p>


<% if teacher_signed_in? %>
  <span><%= link_to 'Edit', edit_project_instruction_path(@instruction) %></span>
  <span><%= link_to 'Delete', project_instruction_path(@instruction),
        method: :delete,
        data: { confirm: 'Are you sure?' } %> </span>
<% end %>

<%= link_to 'Back', project_instructions_path %>
