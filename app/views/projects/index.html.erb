
<p class="margin-small" id="notice"><%= notice %></p>
<div class= "row margin-small padding-none">
<h3 class="padding-none">Hi <%=@current_user.name%> !</h3>

</div>
<div class= "row margin-small ">
<%if @projects.empty?%>
<h3>No projects to show</h3>
<%else%>
<table>
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.subject %></td>
        <td><%= link_to 'Show', project %></td>
        <% if teacher_signed_in? %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br/>
</div>
<div class= "row margin-small ">

<% if teacher_signed_in? %>

<%= link_to 'New Project', new_project_path , class: "paper-btn"%>
<%#= link_to 'Log Out', destroy_teacher_session_url, method: :delete %>
<%# else %>
<%#= link_to 'Teacher Log In', new_teacher_session_url %>
<% end %>
</div>
