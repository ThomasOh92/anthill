     <%# <link rel="stylesheet" href="https://unpkg.com/papercss@1.6.1/dist/paper.min.css"> %>
     <%= stylesheet_link_tag    'application', media: 'all' %>


  </head>

  <body>
  <% if student_signed_in? or teacher_signed_in? %>

    <nav class="border background-success">
      <div class="nav-brand">
        <img src="<%= image_url 'Logo v2 square.png' %>" height="60" width="60"/> <h4>Anthill</h4>
        </div>
      <div class="collapsible">
        <input id="collapsible2" type="checkbox" name="collapsible2">
        <button>
          <label for="collapsible2">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
          </label>
        </button>
        <div class="collapsible-body">
          <ul class="inline">
            <li><a href="/projects">Projects</a></li>
            <% if student_signed_in?%>
            <li><a href="/students/edit">Edit Profile</a></li>
            <li><%= link_to 'Student Log Out', destroy_student_session_url, method: :delete %><li>

            <%elsif teacher_signed_in? %>
            <li><a href="/teachers/edit">Edit Profile</a></li>
            <li><%= link_to 'Teacher Log Out', destroy_teacher_session_url, method: :delete %><li>
            <% else %>
            <% end %>

          </ul>
        </div>
      </div>
    </nav>
    <% end %>
    <%= yield %>
    <div class="footer">
  <%# <h6 class="padding-none margin-small">Designed with â™¥ by Rachel, Thomas & Azhar</h6> %>
  <h6 class="padding-none margin-small">&emsp;</h6>
</div>
