<h1>Edit Task for <%= task.project.name %></h1>
<%= form_with scope: :task, model: task, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
  <p>
    <%= form.label :done? %><br>
    <%= form.check_box :done %>
  </p>
  <p>
    <%= form.hidden_field :project_id, :value => task.project.id %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', project_path(task.project) %>

