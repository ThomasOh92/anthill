<%= form_with scope: :material, url: project_materials_path, local: true do |form| %>

  <p class="error">
    <%= show_errors(@material, :title) %>
    <%= show_errors(@material, :photo) %>
    <%= show_errors(@material, :photo_validation) %>
  </p>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, direct_upload: true, accept: "image/jpeg image/jpg image/png" %>
  </div>

  <div class="field">
    <%= form.hidden_field :project_id, :value => @project.id  %>
  </div>

  <div class="actions">
    <%= form.submit "Save Material", class:"paper-btn  padding-small" %>
  </div>
<% end %>
